<div class="bkg">
<img class="pic col-sm-8 col-sm-offset-2" src="/assets/CookBooks-logo.png"></img>
<div class="well">
<div class="row bkg">
  <div class="col-sm-8 col-sm-offset-2 form">
    <div class="row">
      <form class="form-horizontal" action= "<%= users_url %>" method="post">
      <div class="col-xs-4"></div>
      <div class="col-xs-4">
        <h3>Sign Up</h3>
      </div>
    </div>

    <div class="row">
      <ul class="col-xs-4 col-xs-offset-4">
        <% if flash[:errors] %>
          <% flash[:errors].each do |error|%>
            <li class="errors"><%= error %></li>
          <% end %>
        <% end %>
      </ul>
    </div>

    <div class="row">
      <div class="col-xs-2"></div>
      <div class="col-xs-8">
          <input type="hidden" name="authenticity_token" value="<%=auth_token%>">
        <div class="form-group">
          <div class: "col-xs-12">Already a Member?
            <%= link_to "Log In", new_session_url%>
          </div>
        </div>
        <div class="form-group">
          <label for="name">Name</label>
          <input id="name" class="form-control"
            type="text" name="user[name]" value="<%=@user.name%>">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input id="email" class="form-control"
            type="email" name="user[email]" value="<%=@user.email%>">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input id="password" class="form-control"
            type="password" name="user[password]" value="">
        </div>
        <div class="form-group">
          <input class="col-xs-12 form-control" type="submit">
        </div>
        <div class="form-group">
          <input class="col-xs-12 form-control" id="myBtn" type="submit" value="Log In as Guest">
        </div>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
</div>
  <script type="text/javascript">
    document.getElementById("myBtn").addEventListener("click", demoLogin)
  </script>
