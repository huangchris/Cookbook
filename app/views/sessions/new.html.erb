<div class="row">
  <div class="col-xs-4"></div>
  <div class="col-xs-8">
    <h1>Log In</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-4"></div>
  <div class="col-xs-4">
    <% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |error|%>
        <li><%= error %></li>
      <% end %>
    </ul>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-8">
    <form class="form-horizontal" action= "<%= session_url %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%=auth_token%>">
      <div class="form-group">
        <div class: "col-xs-12">Not a Member yet?
          <%= link_to "Sign Up", new_user_url%>
        </div>
      </div>
      <div class="form-group">
        <label class="col-xs-2" for="email">Email</label>
        <input class="col-xs-10" id="email" type="email" name="user[email]" value="<%=@user.email%>">
      </div>
      <div class="form-group">
        <label class="col-xs-2" for="password">Password</label>
        <input class="col-xs-10" id="password" type="password" name="user[password]" value="">
      </div>
      <div class="form-group">
        <input class="col-xs-12" type="submit">
      </div>
      <div class="form-group">
        <input class="col-xs-12" id="myBtn" type="submit" value="Log In as Guest">
      </div>
    </form>
  </div>
</div>

<script type="text/javascript">
  document.getElementById("myBtn").addEventListener("click", demoLogin)
</script>
